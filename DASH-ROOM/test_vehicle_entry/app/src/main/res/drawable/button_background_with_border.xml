<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="8dp"/>
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="2dp"/> <!-- Adjust the bottom padding for shadow effect -->
            <gradient
                android:startColor="@android:color/transparent"
                android:endColor="@android:color/darker_gray"
                android:angle="90"/>
        </shape>
    </item>

    <!-- Main background layer -->
    <item android:top="2dp"> <!-- Position this layer on top of the shadow layer -->
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/card_background" /> <!-- Background color -->

            <corners android:radius="8dp" /> <!-- Corner radius -->

            <stroke
                android:width="2dp"
                android:color="@color/purple_700" /> <!-- Border width and color -->

            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"/> <!-- Optional padding for internal spacing -->
        </shape>
    </item>
</layer-list>
